<div  id='cart-summary'>
{% if order.id  %}
<table class="table table-bordered text-center mb-0"  >
        <thead>
                    <tr>
                        <th>{{ 'app.cart.table.column.product'|trans }}</th>     
                        <th>{{ 'db.product.gongshi'|trans }}</th>                
                        <th>{{ 'app.cart.table.column.quantity'|trans }}</th>                        
                        <th>{{ 'db.product.priceTotal'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in order.orderItem %}
                        <tr>
                            <td class='text-left product-title'>{{ item.product.title }}</td>                    
                            <td>
                                {{ item.price }}
                            </td>
                            <td>
                                {{ item.quantity }}
                            </td>
                            
                            <td>
                                {{ item.priceTotal}}
                            </td>
                        </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                       <tr>
                            <td colspan='2' class='text-left'>总计<span class="badge badge-warning">{{ order.itemsSingle }}</span></td>                         

                           
                            <td>
                                {{ order.itemsTotal}}
                            </td>
                             <td>
                                {{ order.priceTotal}}
                            </td>
                        </tr>
                        
                        <tr>                            
                             <td colspan='4'>
                                <a href="{{ path('cart') }}" class='btn btn-success btn-block'>{{ 'app.cart.title'|trans({'%title%':order.id}) }}</a>
                            </td>
                        </tr>
                       
       </tfoot>
</table>

{% else %}
<div class='cart-empty'>没有添加产品</div>{% endif %}
</div>